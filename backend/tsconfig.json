{
  "$schema": "https://www.schemastore.org/tsconfig",
  "display": "Node 24",
  "_version": "24.0.0",
  "compilerOptions": {
    "rootDirs": [
      "src"
    ],
    "outDir": "dist",
    // "lib": [
    //   "es2024",
    //   "ESNext.Array",
    //   "ESNext.Collection",
    //   "ESNext.Iterator",
    //   "ESNext.Promise"
    // ],
    // "target": "es2024",
    // "module": "nodenext",
    "target": "es2023",
    "module": "esnext",
    "lib": [
      "ES2023",
      "DOM"
    ],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    // "moduleResolution": "node16",
    "moduleResolution": "node",
    "types": [
      "node"
    ],
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  }
}